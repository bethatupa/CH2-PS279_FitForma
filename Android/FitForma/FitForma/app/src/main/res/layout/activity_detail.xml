<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.food.DetailActivity">

    <ImageView
        android:id="@+id/detail_img"
        android:layout_width="420dp"
        android:layout_height="237dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/PredictBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Predict"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_img" />

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="72dp"
        android:text="@string/name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_img" />

    <TextView
        android:id="@+id/food_weight"
        android:layout_width="75dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/shadow_bg"
        android:gravity="center"
        android:text="@string/food_weight"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_name" />

    <TextView
        android:id="@+id/food_kal"
        android:layout_width="75dp"
        android:layout_height="37dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/shadow_bg"
        android:gravity="center"
        android:text="@string/food_kal"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/food_weight"
        app:layout_constraintTop_toBottomOf="@+id/detail_name" />

    <TextView
        android:id="@+id/food_karbo"
        android:layout_width="75dp"
        android:layout_height="37dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/shadow_bg"
        android:gravity="center"
        android:text="@string/food_karbo"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.728"
        app:layout_constraintStart_toEndOf="@+id/food_kal"
        app:layout_constraintTop_toBottomOf="@+id/detail_name" />

    <TextView
        android:id="@+id/detail_desc"
        android:layout_width="334dp"
        android:layout_height="271dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="@string/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_kal" />

    <TextView
        android:id="@+id/Porsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="@string/porsi"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/food_weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_name"
        app:layout_constraintVertical_bias="0.64" />

    <TextView
        android:id="@+id/Calory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/calory"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/Carbo"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toEndOf="@+id/Porsi"
        app:layout_constraintTop_toBottomOf="@+id/detail_name" />

    <TextView
        android:id="@+id/Carbo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/carbo"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/food_weight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toEndOf="@+id/Carbo"
        app:layout_constraintTop_toBottomOf="@+id/detail_name"
        app:layout_constraintVertical_bias="0.64"
        tools:ignore="DuplicateIds,NotSibling" />

</androidx.constraintlayout.widget.ConstraintLayout>